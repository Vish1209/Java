package com.company;
import java.util.Scanner;
public class pattern_questions_shraddha 
{
    public static void main(String[] args) 
    {
          int n=4;                                                 
          for(int i=1;i<=n;i++)
          {
            for(int j=1;j<=i;j++)
            {                                     //Row no= total columns
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
